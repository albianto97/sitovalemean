isLoggedIn(): boolean {
  const token = localStorage.getItem('token');
  return !!token;
}

isAdmin(): boolean {
  const token = localStorage.getItem('token');
  if (!token) return false;

  try {
    const payload = JSON.parse(atob(token.split('.')[1]));
    return payload.role === 'admin';
  } catch {
    return false;
  }
}

logout(): void {
  localStorage.removeItem('token');
}


